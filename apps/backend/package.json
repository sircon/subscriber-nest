{
  "name": "backend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "nest build api && nest build worker",
    "dev": "concurrently \"nest start api --watch\" \"nest start worker --watch\"",
    "start": "concurrently \"node dist/api/apps/api/src/main.js\" \"node dist/worker/apps/worker/src/main.js\"",
    "start:api": "node dist/api/apps/api/src/main.js",
    "start:worker": "node dist/worker/apps/worker/src/main.js",
    "start:debug": "nest start api --debug --watch",
    "lint": "eslint \"apps/**/*.ts\" \"libs/**/*.ts\" --fix",
    "format": "prettier --write \"apps/**/*.{ts,js,tsx,json,md}\" \"libs/**/*.{ts,js,tsx,json,md}\"",
    "format:check": "prettier --check \"apps/**/*.{ts,js,tsx,json,md}\" \"libs/**/*.{ts,js,tsx,json,md}\"",
    "clean": "rm -rf dist",
    "typeorm": "typeorm-ts-node-commonjs",
    "migration:generate": "yarn run typeorm -- migration:generate -d apps/api/src/data-source.ts",
    "db:migrate": "yarn run typeorm -- migration:run -d apps/api/src/data-source.ts",
    "db:revert": "yarn run typeorm -- migration:revert -d apps/api/src/data-source.ts",
    "db:reset": "yarn run typeorm schema:drop -d apps/api/src/data-source.ts && yarn db:migrate",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage"
  },
  "dependencies": {
    "@bull-board/api": "^6.16.2",
    "@bull-board/express": "^6.16.2",
    "@nestjs/axios": "^4.0.1",
    "@nestjs/bullmq": "^11.0.4",
    "@nestjs/common": "^11.1.12",
    "@nestjs/config": "^4.0.0",
    "@nestjs/core": "^11.1.12",
    "@nestjs/platform-express": "^11.1.12",
    "@nestjs/typeorm": "^11.0.0",
    "@react-email/components": "^1.0.4",
    "@types/react": "^19.2.8",
    "axios": "^1.13.2",
    "bullmq": "^5.66.5",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3",
    "dotenv": "^16.4.7",
    "exceljs": "^4.4.0",
    "ioredis": "^5.9.2",
    "pg": "^8.13.1",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-email": "^5.2.5",
    "reflect-metadata": "^0.2.2",
    "resend": "^6.7.0",
    "rxjs": "^7.8.1",
    "stripe": "^20.2.0",
    "typeorm": "^0.3.28"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.1.12",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^25.0.9",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "concurrently": "^9.1.2",
    "eslint": "^9.16.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "source-map-support": "^0.5.21",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.2"
  }
}
