version: '3.8'

services:
  api:
    ports:
      - "${PORT:-4000}:4000"

  frontend:
    ports:
      - "${FRONTEND_PORT:-3099}:3000"

  worker:
    ports:
      - "${WORKER_PORT:-4001}:4001"
